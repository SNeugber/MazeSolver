                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>-->
                <!--<Viewbox Stretch="Uniform" Name="ImageViewBox">-->
                    <Image Name="mazeImage" Stretch="Uniform" MouseDown="MazeImage_MouseDown">
                        <Image.ToolTip>
                            <ToolTip Name="ImageHoverToolTip" />
                        </Image.ToolTip>
                    </Image>
                <!--</Viewbox>-->
            </Grid>
        </DockPanel>
    </Grid>
</Window>
